$gray = #E6E6E6

html
  font-family: sans-serif
  font-size: 14px
  line-height: 1.45
  letter-spacing: 0.07rem
  color: $gray
  background-color: black

img
  max-width: 100%
  height: auto

#background
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  background-image: url('../img/dist/background.jpg')
  background-size: cover
  background-position: center center
  z-index: -100
  transition-property: filter
  transition-duration: 0.5s

#above
  position: relative
  min-height: 100vh

#element-traxmatik-holder
  position: fixed
  width: 100%
  z-index: 100
  pointer-events: none

#element-traxmatik
  padding: 20px
  max-width: 1200px
  margin: 0 auto

#element-erfmix001-holder
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  display: flex

#element-erfmix001
  padding: 20px 60px
  max-width: 900px
  margin: 0 auto

#player-holder
  position: absolute
  right: 0
  bottom: 0
  left: 0
  padding: 20px

#below-content
  padding: 20px

.button
  padding: 10px 12px
  margin: 10px 0
  line-height: 1
  display: inline-block
  border: 1px solid $gray
  &:hover
    color: black
    background-color: $gray