$gray = #E6E6E6

html
  font-family: sans-serif
  font-size: 18px
  line-height: 1.45
  letter-spacing: 0.07rem
  color: $gray
  background-color: black

h1
  font-size: 11px

img
  max-width: 100%
  height: auto

#main-container
  padding: 20px

ul
  margin: 20px

li
  padding: 20px


.button
  padding: 10px 12px
  margin: 10px 0
  line-height: 1
  display: inline-block
  border: 1px solid $gray
  &:hover
    color: black
    background-color: $gray